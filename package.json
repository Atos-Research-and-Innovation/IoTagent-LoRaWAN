{
  "name": "iotagent-lora",
  "version": "1.1.0",
  "description": "IoT Agent for LoRaWAN protocol",
  "main": "lib/iotagent-lora",
  "scripts": {
    "clean": "rm -rf package-lock.json && rm -rf node_modules && rm -rf coverage",
    "test": "mocha --recursive 'test/**/*.js' --reporter spec --timeout 3000 --ui bdd --exit",
    "test:watch": "npm run test -- -w ./lib",
    "lint": "eslint ./lib ./test --ext .js",
    "prettier": "prettier --single-quote --trailing-comma es5 --write **/*.js *.js",
    "test:coverage": "istanbul cover _mocha -- --recursive 'test/**/*.js' --reporter spec --exit",
    "test:coveralls": "npm run test:coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "watch": "watch 'npm test && npm run lint' ./lib ./test"
  },
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://gitlab.atosresearch.eu/ari/iotagent-lora.git"
  },
  "author": "ATOS SPAIN S.A. IoE Lab, Resarch and Innovation department",
  "dependencies": {
    "async": "^2.6.1",
    "cbor-sync": "^1.0.3",
    "iotagent-node-lib": "git://github.com/telefonicaid/iotagent-node-lib",
    "mqtt": "^2.18.8",
    "request": "^2.88.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "~3.0.2",
    "eslint": "^5.8.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-mocha": "^5.2.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "~1.1.0",
    "istanbul": "^0.4.5",
    "lint-staged": "^7.3.0",
    "mocha": "^5.2.0",
    "nock": "^10.0.2",
    "prettier": "^1.14.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --parser flow --single-quote --trailing-comma es5 --write",
      "git add"
    ]
  }
}
